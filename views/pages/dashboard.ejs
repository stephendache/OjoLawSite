<main>
    <div class="container mt-5">
        <h2 class="text-center">Admin Dashboard</h2>

        <!-- Logout Button -->
        <div class="d-flex justify-content-end">
            <a href="/admin/logout" class="btn btn-danger">Logout</a>
        </div>

        <!-- Filtering Form -->
        <div class="card mt-3 p-3">
            <form method="GET" action="/admin/dashboard" class="row g-3">
                <div class="col-md-4">
                    <input type="email" name="email" class="form-control" placeholder="Filter by Email" value="<%= email || '' %>">
                </div>
                <div class="col-md-3">
                    <input type="date" name="dateFrom" class="form-control" value="<%= dateFrom || '' %>">
                </div>
                <div class="col-md-3">
                    <input type="date" name="dateTo" class="form-control" value="<%= dateTo || '' %>">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </form>
        </div>

        <!-- Messages Table -->
        <div class="card mt-4 p-3">
            <h4>Contact Messages</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Message</th>
                            <th>Sent At</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (messages.length > 0) { %>
                            <% messages.forEach(function(message) { %>
                                <tr>
                                    <td><%= message.fullname %></td>
                                    <td><%= message.email %></td>
                                    <td><%= message.phone %></td>
                                    <td><%= message.message %></td>
                                    <td><%= message.sent_at %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr><td colspan="5" class="text-center">No messages found.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-3">
                <% if (page > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="/admin/dashboard?page=<%= page - 1 %>&email=<%= email %>&dateFrom=<%= dateFrom %>&dateTo=<%= dateTo %>">Previous</a>
                    </li>
                <% } %>
                <li class="page-item">
                    <a class="page-link" href="/admin/dashboard?page=<%= page + 1 %>&email=<%= email %>&dateFrom=<%= dateFrom %>&dateTo=<%= dateTo %>">Next</a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
</main>